{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true
  },
  "tailwindCSS.classFunctions": ["classed"],
  "tailwindCSS.experimental.classRegex": [
    ["classed\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]+)(?:'|\"|`)"],
    ["\\.var\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]+)(?:'|\"|`)"],
    ["\\.iif\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]+)(?:'|\"|`)"]
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  }
}
