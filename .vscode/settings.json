{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true
  },
  "tailwindCSS.classFunctions": ["classed"],
  "tailwindCSS.experimental.classRegex": [
    [
      "classed(?:<[^>]+>)?\\((?:.|\\n)*?\\{",
      "(?:base|classes)\\s*:\\s*(?:'([^']*)'|\"([^\"]*)\"|`([^`]*)`)"
    ],
    [
      "classed(?:<[^>]+>)?\\((?:.|\\n)*?variants\\s*:\\s*\\{",
      "['\"`]([^'\"`]+)['\"`]"
    ],
    [
      "compoundVariants\\s*:\\s*\\[",
      "classes\\s*:\\s*(?:'([^']*)'|\"([^\"]*)\"|`([^`]*)`)"
    ]
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "nxConsole.generateAiAgentRules": true
}
