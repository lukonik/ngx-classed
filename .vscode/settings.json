{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    ".nx": true,
    ".verdaccio": true,
    "tmp": true
  },
  "tailwindCSS.classFunctions": ["classed"],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "tailwindCSS.experimental.classRegex": [
    ["classed(?:<[^>]+>)?\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "nxConsole.generateAiAgentRules": true
}
